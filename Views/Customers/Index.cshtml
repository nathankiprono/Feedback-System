    }

}
<div class="container-fluid">
    <div class="row g-3 mb-4 align-items-center justify-content-between">
        <div class="col-auto">

            <h2 class="app-page-title" style="margin-left:auto">Registered Customers.</h2>
        </div>
        <div class="col-auto">
            <div class="page-utilities">
                <div class="row  justify-content-start justify-content-md-end align-items-center">

                    <div class="col-auto">
                        <input type="text" id="myInput" onkeyup="myFunction()" class="form-control" placeholder="Search for names.." title="Type in a name">


                    </div>
                    <br /><br /> <br /><br />
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal1">Add New <span class="fa fa-plus"></span></button>


                    </div>
                    <div class="col-auto">

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Print  <span class="fa fa-print"></span></button>

                    </div>
                </div>
            </div>
        </div>
    </div>

 

    <table class="table table-bordered  table-sm table-responsive-xl" id="myTable" data-name="mytable" style="border:solid 1px white;padding:8px;box-shadow:0 6px 10px 0 rgba(0,0,0,0.2);width:100%">
        <thead >
            <tr>
                <th style="width:20%">
                    Agent Name
                </th>
                <th style="width:19%">
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                    Weight
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    Passport Number
                </th>
                <th>
                    National Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nationality)
                </th>
                <th style="width:15%">
                    Date of Birth
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>

                <th>
                    Registration Date
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th style="width:10%">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.customers)
            {
                <tr>
                    <td style="width:10%">
                        @item.Agent_Id
                    </td>
                    <td >
                        @item.FullName
                    </td>
                    <td>
                        @item.Height
                    </td>
                    <td>
                        @item.Weight
                    </td>
                    <td>
                        @item.Gender
                    </td>
                    <td>
                        @item.Passport_No
                    </td>
                    <td>
                        @item.National_Id
                    </td>
                    <td>
                        @item.Nationality
                    </td>
                    <td>
                        @item.DOB
                    </td>
                    <td>
                        @item.Notes
                    </td>

                    <td>
                        @item.RegistrationDate
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Customer_Id"><span class="fa fa-edit"></span></a>
                        <a asp-action="Details" asp-route-id="@item.Customer_Id"><span class="fa fa-list-alt"></span></a>
                        <a asp-action="Delete" asp-route-id="@item.Customer_Id"><span class="fa fa-trash-alt text-danger"></span> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination  justify-content-end">

                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="1">First</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)">Previous</a>
                    </li>
                }

                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {


                    <li class="page-item @(pge==pager.CurrentPage? "active": "")">
                        <a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@pge">@pge</a>
                    </li>
                }

                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" asp-controller="Customers" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                    </li>
                }
            </ul>
        }

