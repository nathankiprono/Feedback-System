
@model Inquiry__Management__System.Models.Registration
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="card text-black col-lg-4 col-md-4 col-sm-4" style="border-radius: 20px;margin-top:35px;border:solid 1px white;padding:8px;box-shadow:0 6px 10px 0 rgba(0,0,0,0.2);width:100%">



            @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post, new { role = "form" }))
            {


                <div style="padding:8px;">

                    @if (TempData["emptyfields"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error!..</strong>@TempData["emptyfields"]
                        </div>
                    }
                    else
                    {

                    }
                    @if (TempData["wrong"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error!..</strong>@TempData["wrong"]
                        </div>
                    }
                    else
                    {

                    }
                </div>


                <p class="text-center h3 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-primary" style="margin-top:50px">Sign in</p>


                @Html.AntiForgeryToken()

                <div class="form-group">

                    <label>Email</label>

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", id = "form3Example3c", style = "background-color:floralwhite" })

                </div>


                <div class="form-group">

                    <label>Password</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password", id = "form3Example3c", style = "background-color:floralwhite" })

                </div>




                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <input class="btn-primary btn-lg" type="submit" value="Login" />

                </div>
                @*<div style="margin-top:24px">
                   
                    <span>
                        <a style="color:cornflowerblue" asp-area="" asp-controller="Registrations" asp-action="Edit">Forgot Password?</a>
                    </span>
                </div>*@
                <div style="margin-top:24px">
                    Don't have an account?
                    <span>
                        <a style="color:cornflowerblue" asp-area="" asp-controller="Registrations" asp-action="Create">Sign up</a>
                    </span>
                </div>





            }
        </div>
    </div>
</div>







