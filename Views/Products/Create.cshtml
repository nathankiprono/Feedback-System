@model Inquiry__Management__System.Models.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Product</h2>


<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

     

        <br />
        <div class="col-md-4">
            <label class="form-field">Full Name<span style="color: red">*</span></label>
            <input asp-for="Product_Id" class="form-control" style="border-radius:20px" />
            <span asp-validation-for="Product_Id" class="text-danger"></span>
        </div>
        <br />
        <div class="col-md-4">
            <label class="form-field">Email<span style="color: red">*</span></label>

            <input asp-for="Cost" class="form-control" style="border-radius:20px">

            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <label class="control-label">Product Name</label>
            <input asp-for="Product_Name" class="form-control" />
            <span asp-validation-for="Product_Name" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label class="control-label">Product Name</label>
            <input asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>
   

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
