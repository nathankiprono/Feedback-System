@model Inquiry__Management__System.Models.Registration

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
    <div class="row" style="margin-top:24px">

        <div class="col-lg-4 col-md-4 col-sm-4 "></div>
        <div   class="col-lg-4 col-md-4 col-sm-4 ml-4 mr-4" style="border:solid 1px white;padding:8px;box-shadow:0 6px 10px 0 rgba(0,0,0,0.2);width:100%">
            <form asp-action="Create">

                <h3 class="text-center text-primary">Register Now</h3>
                <br />
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" type="text" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Create a Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
                @{
                    var role = "Client";
                }
                <input type="hidden" value="@role" asp-for="Role" class="form-control" />

                <br />
              


                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <input type="submit" value="Register" class="btn btn-primary " />

                </div>
                <div style="margin-top:24px">
                  Already have an account?
                    <span>
                        <a style="color:cornflowerblue" asp-area="" asp-controller="Home" asp-action="Login">Sign in</a>
                    </span>
                </div>


            </form>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 "></div>
    </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
